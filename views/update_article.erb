<h1>NYC Street Meats: <br/> The Wiki</h1>

<h1>Update an Article Here</h1>

<form action="/articles/<%= @article.id %>/update_article" method="POST">
  <label for="title">Title: </label>
  <input type="text" name="title" id="title" value="<%= @article.title %>">
  <br/>
  <label for="content">Content: </label>
  <input type="text" name="content" id="content" value="<%= @article.content %>">

  <br/>
  <input type="submit" name="submit" placeholder="Update">
</form> 


